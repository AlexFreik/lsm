{
    "name": "Gallery",
    "version": "0.1.0",
    "description": "Add audio meters to YT Gallery",
    "permissions": ["storage", "tabs"],
    "host_permissions": [
        "https://*.youtube.com/*",
        "https://*.youtube-nocookie.com/*",
        "http://localhost:3000/gallery/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.youtube-nocookie.com/embed/*"],
            "js": ["Tone.js", "yt-iframe.js"],
            "all_frames": true
        },
        {
            "matches": ["http://localhost:3000/gallery/*"],
            "js": ["content-script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/bookmark.png",
                "assets/play.png",
                "assets/delete.png",
                "assets/save.png"
            ],
            "matches": ["https://*.youtube.com/*"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/ext-icon.png",
            "24": "assets/ext-icon.png",
            "32": "assets/ext-icon.png"
        },
        "default_title": "YT Gallery Audio",
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}
